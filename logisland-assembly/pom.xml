    <properties>
        <!--Wrapper Properties -->
        <logisland.jvm.heap.mb>512</logisland.jvm.heap.mb>
        <logisland.jvm.permgen.mb>128</logisland.jvm.permgen.mb>
        <logisland.run.as/>

    </properties>
    <profiles>
        <profile>
            <id>hdp2.4</id>
            <activation>
                <property>
                    <name>hdp</name>
                    <value>2.4</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.hurence.logisland</groupId>
                    <artifactId>logisland-spark_1_6-engine_${scala.binary.version}</artifactId>
                </dependency>
            </dependencies>

        </profile>

        <profile>
            <id>hdp2.5</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>hdp</name>
                    <value>2.5</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.hurence.logisland</groupId>
                    <artifactId>logisland-spark_2_1-engine_${scala.binary.version}</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.hurence.logisland</groupId>
                    <artifactId>logisland-connect-spark</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.hurence.logisland</groupId>
                    <artifactId>logisland-connectors-bundle</artifactId>
                </dependency>
            </dependencies>

        </profile>
        <profile>
            <id>rpm</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <logisland.run.as>logisland</logisland.run.as>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>unpack-shared-resources</id>
                                <goals>
                                    <goal>unpack-dependencies</goal>
                                </goals>
                                <phase>generate-resources</phase>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/generated-resources</outputDirectory>
                                    <includeArtifactIds>logisland-resources</includeArtifactIds>
                                    <includeGroupIds>org.apache.logisland</includeGroupIds>
                                    <excludeTransitive>false</excludeTransitive>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack-docs</id>
                                <goals>
